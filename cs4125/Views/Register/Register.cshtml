@model cs4125.Models.Profile
@{
    ViewData["Title"] = "Register";
}

<html>

<h1>Register</h1>
<h2>@ViewBag.error</h2>

<body>
    <form asp-controller="Register" asp-action="Register" method="post">
        <div class="form-group">
            <input type="email" class="form-control" name="registrationEmail" placeholder="Enter email">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="registrationPassword" placeholder="Enter password">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="registrationPassword2" placeholder="Re-Enter password">
        </div>
        <div class="form-group">
            <input type="name" class="form-control" name="registrationName" placeholder="Enter name">
        </div>
        <div class="form-group">
            
            <input type="date" class="form-control" name="registrationDate" placeholder="Birth Date">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="registrationPremium">
            <label class="form-check-label" for="exampleCheck1">Premium User</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" name="registrationOrganiser">
            <label class="form-check-label" for="exampleCheck1">Event Organiser</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>


</html>